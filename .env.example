# Environment Configuration for CryptoVault Credit Intelligence

# Application Environment
NODE_ENV=development
API_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cryptovault_credit
REDIS_URL=redis://localhost:6379

# Ethereum Network Configuration
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
ETHEREUM_WS_URL=wss://eth-mainnet.alchemyapi.io/v2/your-api-key
GOERLI_RPC_URL=https://eth-goerli.alchemyapi.io/v2/your-api-key
SEPOLIA_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/your-api-key

# Deployment Configuration
PRIVATE_KEY=your_private_key_for_deployment_without_0x_prefix
GAS_PRICE_GWEI=20
GAS_LIMIT=8000000

# Smart Contract Addresses - Mainnet
ETHEREUM_CREDIT_SCORE_CONTRACT=0x...
ETHEREUM_NFT_CERTIFICATE_CONTRACT=0x...
ETHEREUM_ZK_VERIFIER_CONTRACT=0x...

# Smart Contract Addresses - Testnet
GOERLI_CREDIT_SCORE_CONTRACT=0x...
GOERLI_NFT_CERTIFICATE_CONTRACT=0x...
GOERLI_ZK_VERIFIER_CONTRACT=0x...

# Private Keys (for deployment and operations)
DEPLOYER_PRIVATE_KEY=0x...
OPERATOR_PRIVATE_KEY=0x...

# External API Keys
CHAINLINK_API_KEY=your-chainlink-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
ALCHEMY_API_KEY=your-alchemy-api-key

# Machine Learning Configuration
ML_MODEL_STORAGE_PATH=./models
ML_TRAINING_DATA_PATH=./data
ML_CONFIDENCE_THRESHOLD=0.7

# Zero-Knowledge Proof Configuration
ZK_CIRCUIT_PATH=./circuits/credit_verification.circom
ZK_PROVING_KEY_PATH=./keys/proving_key.json
ZK_VERIFICATION_KEY_PATH=./keys/verification_key.json

# IPFS Configuration
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_ZK_PROOFS=true
ENABLE_ML_PREDICTIONS=true
ENABLE_SOCIAL_CREDIT=true
ENABLE_GAMIFICATION=true

# Performance Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_CONCURRENT_REQUESTS=50
CACHE_TTL=300
BATCH_SIZE=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://cryptovault.com