{
  "name": "cryptovault-credit-intelligence",
  "version": "1.0.0",
  "description": "Autonomous Credit Intelligence Ecosystem for Web3",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:contracts && npm run build:services && npm run build:frontend",
    "build:contracts": "cd contracts && npm run build",
    "build:services": "cd services && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:services",
    "test:contracts": "cd contracts && npm run test",
    "test:services": "cd services && npm run test",
    "test:integration": "npm run test:integration:local && npm run test:integration:testnet",
    "test:integration:local": "vitest run --config vitest.integration.config.ts",
    "test:integration:testnet": "vitest run --config vitest.testnet.config.ts",
    "dev": "concurrently \"npm run dev:contracts\" \"npm run dev:services\" \"npm run dev:frontend\"",
    "dev:contracts": "cd contracts && npm run dev",
    "dev:services": "cd services && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "lint": "eslint . --ext .ts,.js,.sol",
    "lint:fix": "eslint . --ext .ts,.js,.sol --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist build coverage .nyc_output",
    "prepare": "husky install",
    "setup-real-data": "ts-node scripts/setup-real-data-env.ts",
    "validate-real-data-config": "ts-node scripts/validate-real-data-config.ts"
  },
  "workspaces": [
    "contracts",
    "services/*",
    "frontend",
    "types"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@types/node": "^20.19.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "^2.26.2",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "solidity-coverage": "^0.8.16",
    "typescript": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/ws": "^8.18.1",
    "cors": "^2.8.5",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "viem": "^1.0.0",
    "wagmi": "^1.0.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cryptovault/credit-intelligence.git"
  },
  "keywords": [
    "defi",
    "credit-scoring",
    "blockchain",
    "web3",
    "machine-learning",
    "zero-knowledge",
    "nft",
    "cross-chain"
  ],
  "author": "CryptoVault Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write --plugin=prettier-plugin-solidity"
    ]
  }
}
